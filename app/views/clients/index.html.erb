<div class="w-full lg:w-1/2 mx-auto">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Clientes</h1>
    <%= link_to "Nuevo Cliente", new_client_path, class: "rounded-lg py-3 px-5 bg-gradient-to-b from-green-700 to-green-950 text-white block font-medium" %>
  </div>

  <div id="clients" class="min-w-full mb-16 bg-white p-2 my-2 rounded-xl">
    <% @clients.each do |client| %>
      <%= link_to client do %>
        <div class='flex flex-col gap-2 border border-green-800 shadow-xl rounded-xl my-2 p-4'>
          <div class='flex items-center border rounded-lg shadow-lg p-3 gap-2'>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0 0 12 15.75a7.488 7.488 0 0 0-5.982 2.975m11.963 0a9 9 0 1 0-11.963 0m11.963 0A8.966 8.966 0 0 1 12 21a8.966 8.966 0 0 1-5.982-2.275M15 9.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
            </svg>
            <span class=''>
              <%= client.name %>
            </span>
          </div>
          <div class='flex items-center border rounded-lg shadow-lg p-3 gap-2'>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 3.75v4.5m0-4.5h-4.5m4.5 0-6 6m3 12c-8.284 0-15-6.716-15-15V4.5A2.25 2.25 0 0 1 4.5 2.25h1.372c.516 0 .966.351 1.091.852l1.106 4.423c.11.44-.054.902-.417 1.173l-1.293.97a1.062 1.062 0 0 0-.38 1.21 12.035 12.035 0 0 0 7.143 7.143c.441.162.928-.004 1.21-.38l.97-1.293a1.125 1.125 0 0 1 1.173-.417l4.423 1.106c.5.125.852.575.852 1.091V19.5a2.25 2.25 0 0 1-2.25 2.25h-2.25Z" />
            </svg>
            <span><%= number_to_phone(client.phone , area_code: true)%></span>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
