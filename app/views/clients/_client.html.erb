<div id="<%= dom_id client %>" class='flex flex-col gap-4 rounded-xl bg-slate-700 shadow-xl py-4 px-4 my-4'>
  <p class='text-center'>Cliente</p>
  <div class='flex flex-col items-center gap-2'>
      <%= heroicon 'user-circle', variant: :outline, options: {class: 'w-16 h-16'}%>
    <p class='text-lg font-bold'><%= client.name %></p>
  </div>

  <div class="rounded-xl p-4 shadow-2xl bg-gradient-to-b from-slate-600 to-slate-950 shadow-2xl text-slate-100">

    <div class='flex items-center gap-2'>
      <span class='bg-green-800 rounded-full p-2'><%= heroicon 'phone-arrow-up-right', variant: :outline, options: {class: 'w-4 h-4 text-slate-100'}%></span>
      <p class=""><%= client.phone %></p>
    </div>

    <hr class='my-4'/>

    <div class='flex items-center gap-2'>
      <span class='bg-green-800 rounded-full p-2'><%= heroicon 'gift', variant: :outline, options: {class: 'w-4 h-4 text-white'}%></span>
      <%= client.birthday.strftime("%d/%b/%Y") if client.birthday.present? %>
    </div>

    <hr class='my-4'/>

    <div class='flex items-center gap-2'>
      <span class='bg-green-800 rounded-full p-2'><%= heroicon 'envelope', variant: :outline, options: {class: 'w-4 h-4 text-white'}%></span>
      <%= client.email %>
    </div>

  </div>

  <% if action_name != "show" %>
    <%= link_to "Ver cliente", client, class: "rounded-lg py-3 px-5 bg-blue-600 inline-block font-medium" %>
    <%= link_to "Editar cliente", edit_client_path(client), class: "rounded-lg py-3 ml-2 px-5 bg-blue-600 inline-block font-medium" %>
  <% end %>
</div>
