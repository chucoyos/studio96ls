<div class='flex flex-col items-center mx-auto w-md bg-slate-500 rounded-lg p-8 lg:w-1/2'>
  <h2 class='text-center text-2xl'>Crear cuenta</h2>
  <div class='bg-slate-600 w-full flex flex-col p-4 rounded-lg shadow-2xl'>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'rounded-lg bg-slate-200 text-slate-950 w-full' %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'rounded-lg bg-slate-200 text-slate-950 w-full' %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'rounded-lg bg-slate-200 text-slate-950 w-full' %>
      </div>

      <div class="actions flex">
        <%= f.submit "Crear cuenta", class: 'rounded-lg bg-blue-600 font-bold mt-4 px-4 py-2 shadow-2xl cursor-pointer' %>
      </div>
    <% end %>
  </div>
  
  <%= render "devise/shared/links" %>
</div>
