<div class='flex flex-col items-center mx-auto w-full rounded-lg p-2 lg:w-1/2'>
  <h2 class='text-center text-2xl'>Crear cuenta</h2>
  <div class='w-full flex flex-col px-8 py-6 rounded-lg shadow-2xl'>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'rounded-lg bg-slate-200 text-slate-950 w-full' %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'rounded-lg bg-slate-200 text-slate-950 w-full' %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'rounded-lg bg-slate-200 text-slate-950 w-full' %>
      </div>

      <div class="actions flex gap-2">
        <%= f.submit "Crear cuenta", class: 'rounded-lg bg-gradient-to-b from-green-700 to-green-950 text-green-100 font-medium mt-4 px-4 py-2 shadow-2xl cursor-pointer' %>
        <%= link_to 'Cancelar', root_path, class: 'rounded-lg border border-green-950 font-medium mt-4 px-4 py-2 shadow-2xl' %>
      </div>
    <% end %>
  </div>
  
  <%= render "devise/shared/links" %>
</div>
