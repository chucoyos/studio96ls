<div class='flex flex-col gap-2'>
  <h2>Olvide mi contraseÃ±a</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block shadow rounded-md border text-slate-950 border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="actions my-4">
      <%= f.submit "Enviarme instrucciones", class: "rounded-lg py-3 px-5 bg-blue-600 block font-medium" %>
    </div>
  <% end %>
      <%= render "devise/shared/links" %>
</div>

