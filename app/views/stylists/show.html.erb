<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @stylist %>

    <%= link_to "Editar profesional", edit_stylist_path(@stylist), class: "mt-2 rounded-lg py-3 px-5 bg-blue-600 inline-block font-medium" %>
    <div class="inline-block mt-2">
      <%= button_to "Eliminar profesional", stylist_path(@stylist), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-blue-600 font-medium" %>
    </div>
    <%= link_to "Regresar", stylists_path, class: "bg-blue-600 ml-2 rounded-lg py-3 px-5 bg-blue-600 inline-block font-medium" %>
  </div>
</div>
