<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @stylist %>

    <div class="flex gap-2 mt-2">
      <%= link_to "Editar", edit_stylist_path(@stylist), class: "rounded-lg py-3 px-5 bg-blue-600 font-medium" %>
      <%= button_to "Eliminar", stylist_path(@stylist), method: :delete, class: "rounded-lg py-3 px-5 bg-blue-600 font-medium" %>
      <%= link_to "Regresar", stylists_path, class: "bg-blue-600 rounded-lg py-3 px-5 bg-blue-600 font-medium" %>
    </div>
  </div>
</div>
