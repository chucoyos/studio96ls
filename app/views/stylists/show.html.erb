<div class="mx-auto md:w-2/3 w-full flex bg-gray-300 rounded-lg px-2 pb-4 shadow-lg">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @stylist %>

    <%= link_to "Editar estilista", edit_stylist_path(@stylist), class: "mt-2 rounded-lg py-3 px-5 bg-gradient-to-b from-green-700 to-green-950 text-green-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Eliminar", stylist_path(@stylist), method: :delete, data: {turbo_confirm: 'Eliminar estilista?'}, class: "mt-2 rounded-lg py-3 px-5 bg-gradient-to-b from-red-700 to-red-950 text-red-100 font-medium" %>
    </div>
    <%= link_to "<- Regresar", stylists_path, class: "mt-2 rounded-lg py-3 px-5 border border-green-950 inline-block font-medium" %>
  </div>
</div>
