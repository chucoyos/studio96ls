<%= form_with(model: stylist, class: "contents") do |form| %>
  <% if stylist.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(stylist.errors.count, "error") %> impidieron guardar al estilista:</h2>

      <ul>
        <% stylist.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class='py-2'>
    <%= form.label 'Nombre' %>
    <%= form.text_field :name, class: "bg-slate-600 block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="py-2">
    <%= form.label 'Tel' %>
    <%= form.text_field :phone, class: "bg-slate-600 block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline mt-2">
    <%= form.submit 'Enviar', class: "rounded-lg py-3 px-5 bg-gradient-to-b from-green-700 to-green-950 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
