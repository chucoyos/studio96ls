<div id="<%= dom_id stylist %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= stylist.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Phone:</strong>
    <%= stylist.phone %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this stylist", stylist, class: "rounded-lg py-3 px-5 bg-blue-600 inline-block font-medium" %>
    <%= link_to "Edit this stylist", edit_stylist_path(stylist), class: "bg-blue-600 rounded-lg py-3 ml-2 px-5 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
