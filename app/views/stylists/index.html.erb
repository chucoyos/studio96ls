<div class="w-full mb-16 lg:w-1/2 mx-auto">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl text-slate-100">Estilistas</h1>
    <%= link_to "Nuevo estilista", new_stylist_path, class: "rounded-lg py-3 px-5 bg-gradient-to-b from-green-700 to-green-950 text-green-100 block font-medium" %>
  </div>

  <div id="stylists" class="min-w-full mb-16 bg-slate-600 rounded-xl p-2 my-2 mt-4">
    <% @stylists.each do |stylist| %>
      <%= link_to stylist do %>
        <div class='flex flex-col gap-2 shadow-xl rounded-xl my-2 px-4'>
          <div class='flex items-center py-2 gap-2'>
            <span class='bg-green-800 rounded-full p-2'><%= heroicon 'scissors', variant: :outline, options: {class: 'w-6 h-6 text-slate-100'}%></span>
            <span class=''><%= stylist.name %></span>
            <span class='ml-auto'><%= heroicon 'chevron-right', variant: :outline, options: {class: 'w-6 h-6 text-slate-100'}%></span>
          </div>
          <hr/>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
