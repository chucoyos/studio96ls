<!DOCTYPE html>
<html>
  <head>
    <title>Studio96ls</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class='mb-16 bg-gradient-to-r from-slate-950 to-slate-700 text-slate-100'>
  <main class="mx-auto mt-16 px-5 flex flex-col">
    <% if devise_controller? %>
      <div class="flex justify-center mb-8">
        <% if notice.present? %>
          <div class="flex items-center justify-center px-4 py-2 mr-4 text-sm font-medium text-green-900 bg-green-200 rounded-lg shadow-lg">
            <%= notice %>
          </div>
        <% end %>

        <% if alert.present? %>
          <div class="flex items-center justify-center px-4 py-2 text-sm font-medium text-red-900 bg-red-200 rounded-lg shadow-lg">
            <%= alert %>
          </div>
        <% end %>
      </div>
    <% end %>
    <div>
      <%= yield %>
    </div>
  </main>
  <%= render 'layouts/nav' %>
</body>

</html>
