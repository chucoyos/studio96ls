<!DOCTYPE html>
<html>
  <head>
    <title>Studio96ls</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class='mb-16 bg-gradient-to-r from-slate-950 to-slate-700'>
    <main class="mx-auto mt-16 px-5 flex flex-col ">
      <% if devise_controller? %>
        <div>
          <p class="text-center text-green-950 bg-green-200 rounded-lg">
           <%= notice %>
          </p>
          <p class="text-center text-red-950 bg-red-200 rounded-lg">
            <%= alert %>
          </p>
        </div>
      <% end %>
      <div>
        <%= yield %>
      </div>
    </main>
    <%= render 'layouts/nav' %>
  </body>
</html>
