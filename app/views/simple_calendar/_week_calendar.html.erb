<div class="flex flex-col gap-2 mb-16">
  <div class="font-bold mx-auto text-xl">
    <%= month_name = t('date.month_names')[calendar.start_date.month] %>
    <%= t('simple_calendar.week', default: 'Semana') %>
    <%= calendar.week_number %>
  </div>
    <% if calendar.number_of_weeks > 1 %>
      - <%= calendar.end_week %>
    <% end %>
  
    <nav class='flex justify-between gap-2 font-bold'>
      <%= link_to t('simple_calendar.previous', default: '<<'), calendar.url_for_previous_view, class: 'rounded-lg bg-gradient-to-b from-green-700 to-green-950 text-green-100 shadow-2xl py-3 px-5 block font-medium' %>
      <%= link_to t('simple_calendar.today', default: 'Hoy'), calendar.url_for_today_view, class: 'rounded-lg bg-gradient-to-b from-green-700 to-green-950 text-green-100 shadow-2xl py-3 px-5 block font-medium' %>
      <%= link_to t('simple_calendar.next', default: '>>'), calendar.url_for_next_view, class: 'rounded-lg bg-gradient-to-b from-green-700 to-green-950 text-green-100 shadow-2xl py-3 px-5 block font-medium' %>
    </nav>
  <div class='flex flex-col rounded-xl p-4 bg-slate-800 mt-6'>
  <div class='flex flex-col justify-between'>
    <% date_range.each_slice(7) do |week| %>
      <div class='flex flex-col'>
        <% week.each do |day| %>
          <div class='flex flex-col items-start min-h-16'>
            <%= t('date.day_names')[day.wday] %>
            <%= day.day %>
            <% if calendar.sorted_events_for(day).empty? %>
              <p class='text-sm border w-full px-4 rounded-lg py-2 border-slate-600'>No hay citas para el <%= t('date.day_names')[day.wday] %></p>
            <% else %>
              <%= content_tag :td, class: calendar.td_classes_for(day) do %>
                <% instance_exec(day, calendar.sorted_events_for(day), &passed_block) %>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

</div>
