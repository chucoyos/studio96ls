<div id="<%= dom_id service %>" class='rounded-xl py-4 px-2 my-4'>
  <p class="my-5 shadow-2xl bg-gray-100 rounded-lg p-4">
    <strong class="block font-medium mb-1">Nombre:</strong>
    <%= service.name %>
  </p>

  <p class="my-5 shadow-2xl bg-gray-100 rounded-lg p-4">
    <strong class="block font-medium mb-1">Descripcion:</strong>
    <%= service.description %>
  </p>

  <p class="my-5 shadow-2xl bg-gray-100 rounded-lg p-4">
    <strong class="block font-medium mb-1">Precio:</strong>
    $ <%= service.price %>
  </p>

  <p class="my-5 shadow-2xl bg-gray-100 rounded-lg p-4">
    <strong class="block font-medium mb-1">Comision:</strong>
    $ <%= service.commission %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Ver servicio", service, class: "rounded-lg py-3 px-5 bg-blue-600 inline-block font-medium" %>
    <%= link_to "Editar servicio", edit_service_path(service), class: "rounded-lg py-3 ml-2 px-5 bg-blue-600 inline-block font-medium" %>
  <% end %>
</div>
