<div class="w-full mb-16 lg:w-1/2 mx-auto">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl text-slate-100">Servicios</h1>
    <%= link_to "Nuevo servicio", new_service_path, class: "rounded-lg py-3 px-5 bg-gradient-to-b from-green-700 to-green-950 text-green-100 block font-medium" %>
  </div>

  <div id="clients" class="min-w-full text-slate-100 bg-slate-600 rounded-xl mt-4 px-2">
    <% @services.each do |service| %>
      <%= link_to service do %>
          <div class='py-2 px-2'>
            <div class='flex gap-4 items-center'>
              <span class='bg-green-800 rounded-full p-2'><%= heroicon 'sparkles', variant: :outline, options: {class: 'w-4 h-4 text-white'}%></span>
              <span class=''>
                <%= service.name %>
              </span>
              <span class='ml-auto'><%= heroicon 'chevron-right', variant: :outline, options: {class: 'w-4 h-4 text-white'}%></span>
            </div>
          </div>
          <hr/>
      <% end %>
    <% end %>
  </div>
</div>
