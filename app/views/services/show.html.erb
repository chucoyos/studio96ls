<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @service %>

    <%= link_to "Editar servicio", edit_service_path(@service), class: "mt-2 rounded-lg py-3 px-5 bg-gradient-to-b from-green-700 to-green-950 text-green-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Eliminar servicio", service_path(@service), method: :delete, class: "mt-2 border bg-gradient-to-b from-red-700 to-red-950 text-red-100 rounded-lg py-3 px-5 font-medium" %>
    </div>
    <%= link_to "<- Regresar", services_path, class: "mt-2 border border-green-950 rounded-lg py-3 px-5 inline-block font-medium" %>
  </div>
</div>
