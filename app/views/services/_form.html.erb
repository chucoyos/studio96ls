<%= form_with(model: service, class: "contents") do |form| %>
  <% if service.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(service.errors.count, "error") %> evitan guardar el servicio:</h2>

      <ul>
        <% service.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="shadow-2xl rounded-lg p-4">
    <%= form.label 'Nombre' %>
    <%= form.text_field :name, class: "block shadow bg-slate-600 rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="shadow-2xl rounded-lg p-4">
    <%= form.label 'Descripcion' %>
    <%= form.text_area :description, rows: 4, class: "block shadow bg-slate-600 rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="shadow-2xl rounded-lg p-4">
    <%= form.label 'Precio' %>
    <%= form.text_field :price, class: "block shadow bg-slate-600 rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="shadow-2xl rounded-lg p-4">
    <%= form.label 'Comision' %>
    <%= form.text_field :commission, class: "block shadow bg-slate-600 rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline ml-4">
    <%= form.submit 'Enviar', class: "rounded-lg py-3 px-5 bg-gradient-to-b from-green-700 to-green-950 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
