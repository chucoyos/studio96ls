<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @meeting %>

    <%= link_to "Editar cita", edit_meeting_path(@meeting), class: "mt-2 rounded-lg py-3 px-5 bg-blue-600 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Eliminar cita", meeting_path(@meeting), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-blue-600 font-medium" %>
    </div>
    <%= link_to "Ver citas", meetings_path, class: "mt-2 rounded-lg py-3 px-5 bg-blue-600 inline-block font-medium" %>
  </div>
</div>
