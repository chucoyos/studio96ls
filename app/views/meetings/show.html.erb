<div class="mx-auto md:w-2/3 w-full bg-slate-600 rounded-xl px-2 py-4">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <div class='flex justify-between px-2 w-1/2 ml-6'>
      <p class='font-bold'><%= link_to '<-', meetings_path %></p>
      <p class=''>Cita</p>
    </div>
    <%= render @meeting %>

    <%= link_to "Editar cita", edit_meeting_path(@meeting), class: "mt-2 rounded-lg py-3 px-5 bg-gradient-to-b from-green-700 to-green-950 text-green-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Eliminar cita", meeting_path(@meeting), method: :delete, data: {turbo_confirm: 'Eliminar cita?'}, class: "mt-2 rounded-lg py-3 px-5 bg-gradient-to-b from-red-700 to-red-950 text-red-100 font-medium" %>
    </div>
    <%= link_to "<- Regresar", meetings_path, class: "mt-2 ml-2 rounded-lg py-3 px-5 bg-gradient-to-b from-slate-100 to-slate-400 text-slate-950 inline-block font-medium" %>
  </div>
</div>
